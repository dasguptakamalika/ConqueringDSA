class Solution {
    public boolean isAnagram(String s, String t) {
        if (s.length() != t.length()) {
            return false;
        }
        
        int[] freq = new int[26];
        
        for (int i = 0; i < s.length(); i++) {
            freq[s.charAt(i) - 'a']++;
            freq[t.charAt(i) - 'a']--;           //consider the examples like car and cat , unless and until they are from from indices, cancellation wont work.
                                                 //count va;ues indicate something extra or less , hence we have the count
        }
        
        for (int count : freq) {
            if (count != 0) {
                return false;
            }
        }
        
        return true;
    }
}
